---
import Typography from './wrappers/Typography.astro';
import Section from './wrappers/Section.astro';
import { geti18n } from '../lib/i18n';

const { url } = Astro;
const { pathname } = url;
const i18n = geti18n({ pathname });
---

<Section class="bg-terciary">
	<div class="max-w-6xl mx-auto px-4 py-8 sm:px-6">
		<div class="text-center">
			<Typography variant="h1">{i18n.HERO_TITLE}</Typography>
			<Typography variant="h2" class="text-font-primary md:text-6xl">
				{i18n.HERO_SUBTITLE}
			</Typography>

			<a href="#menu">
				<button
					class="my-4 py-2 px-4 font-medium text-font-primary bg-primary-600 rounded-full hover:contrast-200 hover:text-gray-200 transition"
				>
					{i18n.HERO_BUTTON}
				</button>
			</a>
		</div>
	</div>
</Section>
