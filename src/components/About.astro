---
import Typography from './wrappers/Typography.astro';
import Section from './wrappers/Section.astro';
import { geti18n } from '../lib/i18n';

const { url } = Astro;
const { pathname } = url;
const i18n = geti18n({ pathname });

const benefits = [
	{
		title: i18n.US_SECTION_TITLE,
		description: i18n.US_SECTION_TEXT,
		icon: 'üçé',
	},
	{
		title: i18n.US_SECTION_TITLE2,
		description: i18n.US_SECTION_TEXT2,
		icon: 'ü•ó',
	},
	{
