---
import { Image } from 'astro:assets';
import Typography from './wrappers/Typography.astro';
import Section from './wrappers/Section.astro';
import { geti18n } from '../lib/i18n';

const { url } = Astro;
const { pathname } = url;
const i18n = geti18n({ pathname });
---

<Section id="about" class="bg-white">
	<div class="flex flex-col lg:flex-row items-center">
		<div class="lg:w-1/2 mb-8 lg:mb-0 relative grid md:grid-cols-2 gap-2">
			<div class="rounded-3xl overflow-hidden hidden md:flex">
				<Image
					loading={'eager'}
					src="/images/rostidor.webp"
					alt="Rostidor exterior"
					width={400}
					height={600}
					class="w-full h-auto object-cover"
				/>
			</div>
			<div class="rounded-3xl overflow-hidden hidden md:flex">
				<Image
					loading={'eager'}
					src="/images/rostidor_interior.webp"
					alt="Restaurant interior"
					width={300}
					height={400}
					class="w-full h-auto object-cover rounded-3xl"
				/>
			</div>
			<div
				class="md:absolute md:w-30 md:h-30 md:top-[-40px] md:right-[-10px] bg-yellow-400 rounded-full shadow-lg border-4 justify-center"
			>
				<Image
					loading={'eager'}
					src="/images/svg.png"
					alt="Logo premi millor restaurant 2022"
					width={150}
					height={150}
					class="overflow-hidden rounded-full"
				/>
			</div>
		</div>
		<div class="lg:w-1/2 lg:pl-16">
			<Typography variant="h3">{i18n.ABOUT_TITLE}</Typography>
			<Typography variant="h2">{i18n.ABOUT_SUBTITLE}</Typography>
			<Typography variant="p">
				{i18n.ABOUT_TEXT1}
			</Typography>
			<Typography variant="p">
				{i18n.ABOUT_TEXT2}
			</Typography>
			<Typography variant="p">
				{i18n.ABOUT_TEXT3}
			</Typography>
			<Typography variant="p" class="text-primary-500">
				{i18n.ABOUT_PREMI}
			</Typography>
		</div>
	</div>
</Section>
