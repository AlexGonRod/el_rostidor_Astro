---
import { Icon } from 'astro-icon/components';
import Typography from '@components/wrappers/Typography.astro';
import Section from '@components/wrappers/Section.astro';
import { geti18n } from '../lib/i18n';

const { url } = Astro;
const { pathname } = url;
const i18n = geti18n({ pathname });
---

<Section id="contacte" class="py-16 px-4 bg-primary">
	<div class="text-center mb-8">
		<Typography variant="h3">{i18n.CONTACT_TITLE}</Typography>
		<Typography variant="h2">{i18n.CONTACT_SUBTITLE}</Typography>
	</div>

	<div class="flex flex-col md:flex-row prose">
		<div class="w-full md:w-2/3 mb-8 md:mb-0">
			<div class="relative h-0 pb-[56.25%]">
				<iframe
					src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d186.44512029911772!2d2.5408787073923023!3d41.609875070914555!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12bb367f40328761%3A0xf1deb24a3d2c3bc6!2sEl%20Rostidor!5e0!3m2!1ses!2ses!4v1727702006106!5m2!1ses!2ses"
					width="600"
					height="450"
					style="border:0;"
					class="absolute top-0 left-0 w-full h-full border-0 rounded-lg"
					allowfullscreen=""
					loading="lazy"
					referrerpolicy="no-referrer-when-downgrade"
					title="mapa"
				>
				</iframe>
			</div>
		</div>

		<div class="w-full md:w-1/3 md:pl-8">
			<Typography variant="h3">{i18n.CONTACT_INFO_TITLE}</Typography>
			<ul class="space-y-4">
				<Typography variant="li">
					<Icon
						name="mdi:google-maps"
						class="text-primary-600 mr-3 text-xl"
					/>
					<span>Rambla Sant Mart√≠, 46, Arenys de munt</span>
				</Typography>
				<Typography variant="li">
					<Icon
						name="material-symbols-light:mail-outline"
						class="text-primary-600 mr-3 text-xl"
					/>
					<span>elrostidorarenysdemunt@gmail.com</span>
				</Typography>
				<Typography variant="li">
					<Icon
						name="mdi-light:phone"
						class="text-primary-600 mr-3 text-xl"
					/>
					<span>93 793 71 07</span>
				</Typography>
			</ul>
			<div class="w-full my-16">
				<Typography variant="h3">{i18n.CONTACT_HOURS_TITLE}</Typography>
				<ul class="space-y-4">
					<li class="flex items-center text-left">
						<span> {i18n.CONTACT_HOURS1}</span>
						<Typography variant="li">
							<span>{i18n.CONTACT_HOURS2}</span>
						</Typography>
						<Typography variant="li">
							<span>{i18n.CONTACT_HOURS3}</span>
						</Typography>
					</li>
				</ul>
			</div>
		</div>
	</div>
</Section>
