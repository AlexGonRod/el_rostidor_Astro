---
import Typography from './wrappers/Typography.astro';
import Section from './wrappers/Section.astro';
import { geti18n } from '../lib/i18n';

const { url } = Astro;
const { pathname } = url;
const i18n = geti18n({ pathname });

---

<Section id="menu" class="bg-secondary">
	<Typography variant="h3">{i18n.MENU_TITLE}</Typography>
	<Typography variant="h2">{i18n.MENU_SUBTITLE}</Typography>

	<div class="grid grid-cols-1 lg:grid-cols-2 gap-4 prose">
		<!-- Left Column Menu Items -->
		<div class="bg-terciary rounded-lg p-8">
			<Typography variant="h3" class="mb-8 mt-0"
				>{i18n.MENU.SIDE.TITLE}</Typography
			>
			<ul class="space-y-6">
				{
					i18n.MENU.SIDE.DISHES.map((item) => (
						<li class="flex justify-between items-center border-b border-gray-700 pb-4">
							<div>
								<Typography
									variant="h3"
									size="text-sm"
									class="text-font-primary"
								>
									{item}
								</Typography>
							</div>
						</li>
					))
				}
			</ul>
		</div>

		<!-- Right Column Menu Items -->
		<div class="bg-terciary rounded-lg p-8">
			<Typography variant="h3" class="mb-8 mt-0"
				>{i18n.MENU.FIRST.TITLE}</Typography
			>
			<ul class="space-y-6">
				{
					i18n.MENU.FIRST.DISHES.map((item) => (
						<li class="flex justify-between items-center border-b border-gray-700 pb-4">
							<div>
								<Typography
									variant="h3"
									size="text-sm"
									class="text-font-primary text-left"
								>
									{item}
								</Typography>
							</div>
						</li>
					))
				}
			</ul>
		</div>
	</div>
</Section>
