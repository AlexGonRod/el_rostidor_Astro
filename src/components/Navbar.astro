---
import { geti18n } from '../lib/i18n';

const { url } = Astro;
const { pathname } = url;
const i18n = geti18n({ pathname });

const anchorClass =
	'py-4 px-2 text-font-accent font-semibold hover:text-primary-500 hover:cursor-pointer transition';

const links = [
	{
		href: '/',
		title: i18n.HEADER_HOME,
	},
	{
		href: '#about',
		title: i18n.HEADER_ABOUT,
	},
	{
		href: '#imatges',
		title: i18n.HEADER_IMAGES,
	},
	{
		href: '#menu',
		title: i18n.HEADER_MENU,
	},
	{
		href: '#nostres-clients',
		title: i18n.HEADER_CLIENTS,
	},
	{
		href: '#contacte',
		title: i18n.HEADER_CONTACT,
	},
];
---

<nav class="bg-white shadow-lg">
	<div class="max-w-6xl mx-auto px-4">
		<div class="flex justify-between">
			<div class="flex space-x-7">
				<div>
					<a href="/" class="flex items-center py-4 px-2">
						<span class="font-semibold text-font-accent text-lg"
							>El Rostidor</span
						>
					</a>
				</div>
			</div>
			<div class="hidden md:flex items-center space-x-3 font-sans">
				{
					links.map(({ href, title }) => (
						<ul>
							<li>
								<a href={href} class={anchorClass}>
									{title}
								</a>
							</li>
						</ul>
					))
				}

